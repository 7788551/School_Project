@model List<SchoolProject.Models.Faculty>

@{
    ViewData["Title"] = "Faculty Management";
    Layout = "~/Views/Shared/AdminLayout.cshtml"; // change if needed
}

<div class="container-fluid mt-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Faculty List</h3>

        <a asp-action="AddFaculty"
           asp-controller="Faculty"
           class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Faculty
        </a>
    </div>

    <!-- SUCCESS / ERROR -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- TABLE -->
    <div class="card shadow">
        <div class="card-body table-responsive">

            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="width:60px;">#</th>
                        <th style="width:120px;">Image</th>
                        <th>Name</th>
                        <th>Designation</th>
                        <th style="width:160px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>

                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImagePath))
                                    {
                                        <img src="~/uploads/faculty/@item.ImagePath"
                                             class="img-thumbnail"
                                             style="width:80px;height:80px;object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Image</span>
                                    }
                                </td>

                                <td>@item.Name</td>
                                <td>@item.Designation</td>

                                <td>
                                    <a asp-action="EditFaculty"
                                       asp-route-id="@item.FacultyId"
                                       class="btn btn-sm btn-warning me-1">
                                        Edit
                                    </a>

                                    <form asp-action="Delete"
                                          asp-route-id="@item.FacultyId"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this faculty?');">
                                        <button type="submit"
                                                class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                No faculty records found.
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>
