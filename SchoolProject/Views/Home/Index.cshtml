<style>
    /* ================================
       PROGRAM / EVENT CARD FIXED SIZE
    ================================ */

    /* Ensure all cards same height */
    .program-item {
        height: 100%;
        display: flex;
        flex-direction: column;
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
    }

    /* Fixed image container */
    .program-item-image {
        width: 100%;
        height: 220px; /* 🔥 Adjust if needed */
        overflow: hidden;
    }

        /* Reset figure */
        .program-item-image figure {
            width: 100%;
            height: 100%;
            margin: 0;
        }

        /* Image auto-adjust */
        .program-item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* 🔥 KEY */
            object-position: center;
            display: block;
            border-radius:7px;
            transition: transform 0.4s ease;
        }

    /* Hover zoom effect */
    .program-item:hover .program-item-image img {
        transform: scale(1.05);
    }

    /* Content area */
    .program-item-content {
        padding: 2px;
        flex-grow: 1;
        text-align: center;
    }

        /* Optional heading styling */
        .program-item-content h2 {
            font-size: 20px;
            margin-bottom: 10px;
        }

        /* Optional text styling */
        .program-item-content p {
            font-size: 15px;
            color: #555;
        }


    @@media (max-width: 768px) {
        .program-item-image {
            height: 180px;
        }
    }


    /* ================================
       EQUAL CIRCLE IMAGE FIX (SAFE)
       ================================ */

    .circle-equal-box {
        width: 70px;
        height: 70px;
        flex-shrink: 0;
    }

    .circle-equal-figure {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        overflow: hidden;
        margin: 0;
    }

    .circle-equal-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
    }


</style>
