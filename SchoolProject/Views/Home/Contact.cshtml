 <style>

    /* =====================================
       REMOVE HOVER EFFECT COMPLETELY
       ===================================== */

    /* Disable hover background, overlay & filter */
    .contact-info-item:hover {
        background: inherit !important;
        filter: none !important;
    }

        /* Disable any pseudo-element overlay on hover */
        .contact-info-item::before,
        .contact-info-item::after,
        .contact-info-item:hover::before,
        .contact-info-item:hover::after {
            opacity: 0 !important;
            background: transparent !important;
        }

    /* Remove transitions to prevent flicker */
    .contact-info-item,
    .contact-info-item * {
        transition: none !important;
    }

        /* Lock icon & text color permanently */
        .contact-info-item .icon-box i,
        .contact-info-item h3,
        .contact-info-item p,
        .contact-info-item a {
            color: #ffffff !important;
        }

    /* Prevent cursor change */
    .contact-info-item {
        cursor: default;
    }
    /* =====================================
       KEEP ICON VISIBLE ON HOVER (FINAL)
       ===================================== */

    /* Ensure contact card is stacking context */
    .contact-info-item {
        position: relative;
        overflow: hidden;
    }

        /* Push icon box above hover overlay */
        .contact-info-item .icon-box {
            position: relative;
            z-index: 5;
        }

            /* Force icon visibility */
            .contact-info-item .icon-box i {
                color: #ffffff !important;
                font-size: 26px;
            }

    /* Also keep text visible */
    .contact-info-item-content {
        position: relative;
        z-index: 5;
    }

        .contact-info-item-content h3,
        .contact-info-item-content p,
        .contact-info-item-content a {
            color: #ffffff !important;
        }

    /* If theme uses ::before / ::after overlay */
    .contact-info-item::before,
    .contact-info-item::after {
        z-index: 1;
    }


</style> 
