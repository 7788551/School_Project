@{
    ViewData["Title"] = "Login";
}
<style>
    @@themeColor : #c91f1f;
    @@dark : #111;

    .login-section {
        min-height: 90vh;
    }

    .login-card {
        background: #fff;
        padding: 40px 35px;
        border-radius: 18px;
        animation: fadeUp 0.6s ease;
    }

    .login-logo {
        width: 90px;
    }

    .form-control {
        height: 48px;
        border-radius: 10px;
        border: 1px solid #ddd;
    }


    .password-box {
        position: relative;
        i

    {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #666;
    }

    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media only screen and (max-width: 767px) {

        .login-section {
            min-height: 70vh;
        }
    }

    @@media only screen and (max-width: 1024px) {

        .login-section {
            min-height: 55vh;
        }
    }

    .forgot-password-link {
        font-size: 14px;
        color: #6c757d; /* Bootstrap muted color */
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .forgot-password-link:hover {
            color: #0d6efd; /* Bootstrap primary */
            text-decoration: none; /* force no underline */
        }

</style>
<!-- Page Header Start -->
<div class="page-header bg-section dark-section parallaxie">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Page Header Box Start -->
                <div class="page-header-box">
                    <h1 class="text-anime-style-3" data-cursor="-opaque">Login Page</h1>
                    <nav class="wow fadeInUp">
                        <ol class="breadcrumb">
                            <!-- <li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Contact us</li> -->
                        </ol>
                    </nav>
                </div>
                <!-- Page Header Box End -->
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->



<section class="login-section d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7 col-sm-10">
                <div class="login-card shadow">

                    <div class="text-center mb-4">
                        <img src="~/images/School-images/COLOURLOGO.png" class="login-logo" />
                        <h3 class="mt-3 fw-bold">School Login</h3>
                        <p class="text-muted">
                            Login using your registered phone number or email
                        </p>
                    </div>

                    <form asp-controller="Account" asp-action="Login" method="post">

                        <div class="form-group mb-3">
                            <label>Phone Number or Email</label>
                            <input type="text"
                                   id="loginId"
                                   name="LoginId"
                                   class="form-control"
                                   placeholder="Enter phone number or email"
                                   required />
                        </div>

                        <div class="form-group mb-3">
                            <label>Password</label>
                            <input type="password"
                                   class="form-control"
                                   name="Password"
                                   placeholder="Enter password"
                                   required />
                        </div>

                        <button type="submit"
                                class="btn btn-default btn-highlighted w-100 mt-3">
                            Login
                        </button>

                        <!-- Forgot Password -->
                        <div class="text-center mt-3">
                            <a asp-controller="Account"
                               asp-action="ForgotPassword"
                               class="forgot-password-link">
                                Forgot Password?
                            </a>
                        </div>

                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3">
                            @ViewBag.Error
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>


<script>
    // ===============================
    // 1️⃣ Phone OR Email max-length logic
    // ===============================
    const loginInput = document.getElementById("loginId");

    loginInput.addEventListener("input", function () {
        const value = this.value.trim();

        // Only digits → Phone number
        if (/^\d+$/.test(value)) {
            this.maxLength = 10;
        } else {
            // Email or mixed → remove phone restriction
            this.removeAttribute("maxLength");
        }
    });

    // ===============================
    // 2️⃣ Show / Hide Password (SAFE)
    // ===============================
    const togglePassword = document.querySelector(".toggle-password");
    const passwordInput = document.querySelector("input[name='Password']");

    if (togglePassword && passwordInput) {
        togglePassword.addEventListener("click", function () {
            const type =
                passwordInput.type === "password" ? "text" : "password";
            passwordInput.type = type;
            this.classList.toggle("bi-eye");
            this.classList.toggle("bi-eye-slash");
        });
    }

    // ===============================
    // 3️⃣ Client-side Validation (OPTIONAL but SAFE)
    // ===============================
    document.querySelector("form").addEventListener("submit", function (e) {
        const loginValue = loginInput.value.trim();
        const passwordValue = passwordInput.value.trim();

        // If numeric, validate phone length
        if (/^\d+$/.test(loginValue) && loginValue.length !== 10) {
            e.preventDefault();
            alert("Please enter a valid 10-digit phone number");
            return;
        }

        // Basic password check
        if (passwordValue.length < 4) {
            e.preventDefault();
            alert("Password is too short");
            return;
        }

        // ✅ Let form submit normally
    });
</script>
