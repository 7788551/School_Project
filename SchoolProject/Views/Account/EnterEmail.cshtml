@{
    ViewData["Title"] = "Enter Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // 👆 use the same layout as your Login page
}


<!-- Page Header Start -->
<div class="page-header bg-section dark-section parallaxie">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Page Header Box Start -->
                <div class="page-header-box">
                    <h1 class="text-anime-style-3" data-cursor="-opaque">Enter Email</h1>
                    <nav class="wow fadeInUp">
                        <ol class="breadcrumb">
                            <!-- <li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Contact us</li> -->
                        </ol>
                    </nav>
                </div>
                <!-- Page Header Box End -->
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<div class="container d-flex justify-content-center align-items-center"
     style="min-height: 100vh;">
    <div class="card shadow-sm" style="width: 100%; max-width: 420px;">
        <div class="card-body p-4">

            <h4 class="text-center mb-3">Verify Email</h4>
            <p class="text-muted text-center mb-4">
                Enter your registered email to receive OTP
            </p>

            @* Optional info message *@
            <div class="alert alert-info text-center">
                A 6-digit OTP will be sent to your email address
            </div>

            <form asp-controller="Account"
                  asp-action="EnterEmail"
                  method="post">

                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <input type="email"
                           name="email"
                           class="form-control"
                           placeholder="Enter registered email"
                           required />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        Send OTP
                    </button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-controller="Account"
                   asp-action="ForgotPassword"
                   class="text-decoration-none">
                    Change phone number
                </a>
            </div>

        </div>
    </div>
</div>
