@model List<AttendanceList>
@{
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
}

<main class="main-content attendance-page">

    <h2 class="mb-3">Marked Attendance</h2>

    <!-- ✅ Responsive wrapper prevents bottom bar -->
    <div class="table-responsive attendance-table-wrapper">
        <table class="table table-bordered table-striped align-middle w-100">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Class</th>
                    <th>Section</th>
                    <th>Student</th>
                    <th>Status</th>
                    <th style="width:140px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    bool isToday = item.AttendanceDate.Date == DateTime.Today;

                    <tr data-student-id="@item.StudentId"
                        data-date="@item.AttendanceDate.ToString("yyyy-MM-dd")">

                        <td>@item.AttendanceDate.ToString("dd-MM-yyyy")</td>
                        <td>@item.ClassName</td>
                        <td>@item.SectionName</td>
                        <td class="text-truncate" style="max-width:200px;">
                            @item.StudentName
                        </td>

                        <td>
                            <span class="status-text">@item.Status</span>

                            <select class="form-select form-select-sm status-select d-none">
                                <option value="true" selected="@(item.Status == "Present")">Present</option>
                                <option value="false" selected="@(item.Status == "Absent")">Absent</option>
                            </select>
                        </td>

                        <td>
                            @if (isToday)
                            {
                                <button type="button"
                                        class="btn btn-sm btn-warning edit-btn">
                                    Edit
                                </button>

                                <button type="button"
                                        class="btn btn-sm btn-success save-btn d-none">
                                    Save
                                </button>
                            }
                            else
                            {
                                <span class="text-muted">Locked</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</main>

@section Scripts {
    <script>
