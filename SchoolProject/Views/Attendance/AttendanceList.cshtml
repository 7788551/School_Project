@model List<AttendanceList>

@{
    ViewData["Title"] = "AttendanceList";
    Layout = "~/Views/Shared/TeacherLayout.cshtml"; // use your layout
}



<main class="main-content">

<h2 class="mb-3">Marked Attendance</h2>

@if (Model == null || !Model.Any())
{
    <p style="color:red;">No attendance data found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Class</th>
                <th>Section</th>
                <th>Student</th>
                <th>Status</th>
                <th>Action</th>   <!-- ✅ New Column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AttendanceDate.ToString("dd-MM-yyyy")</td>
                    <td>@item.ClassName</td>
                    <td>@item.SectionName</td>
                    <td>@item.StudentName</td>
                    <td>@item.Status</td>

                    <td>
                        @{
                            bool isToday = item.AttendanceDate.Date == DateTime.Today;
                        }

                        @if (isToday)
                        {
                            <a asp-action="EditAttendance"
                               asp-route-id="@item.AttendanceId"
                               class="btn btn-sm btn-warning">
                                Edit
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">Locked</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
</main>