@{
    ViewData["Title"] = "No Class Assigned";
    Layout = "TeacherLayout";   // keep your main layout
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-warning">
                <div class="card-body text-center">
                    <h3 class="text-warning mb-3">
                        <i class="bi bi-exclamation-triangle"></i>
                        No Class Assigned
                    </h3>

                    <p class="fs-5">
                        You are not assigned as a <strong>Class Teacher</strong>
                        for the current academic session.
                    </p>

                    <p class="text-muted">
                        Please contact the administrator for class assignment.
                    </p>

                   
                    <a asp-controller="Teacher"
                       asp-action="TeacherDashboard"
                       class="btn btn-primary mt-3">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
