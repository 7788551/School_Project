@model List<SchoolProject.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    /* ============================
       SUBJECTS LIST PAGE
       ============================ */

    h2 {
        margin-bottom: 15px;
        color: #2c3e50;
    }

    /* Add Subject button */
    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 8px 14px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
    }

        .btn-primary:hover {
            background-color: #0069d9;
        }

    /* Table styling */
    table {
        border-collapse: collapse;
        background-color: #ffffff;
        box-shadow: 0 0 10px rgba(0,0,0,0.08);
        border-radius: 6px;
        overflow: hidden;
    }

        /* Table header */
        table thead tr {
            background-color: #343a40;
            color: #ffffff;
        }

        table th {
            padding: 12px;
            text-align: left;
            font-weight: 600;
        }

        /* Table body */
        table td {
            padding: 10px 12px;
            border-top: 1px solid #eaeaea;
            font-size: 14px;
        }

        /* Row hover effect */
        table tbody tr:hover {
            background-color: #f5f8fa;
        }

        /* No data row */
        table td[colspan] {
            padding: 15px;
            color: #888;
            font-style: italic;
        }
    
</style>

<h2>Subjects</h2>

<a asp-action="CreateSubject" class="btn btn-primary">
    + Add Subject
</a>

<br />
<br />

<table border="1" cellpadding="8" cellspacing="0" width="60%">
    <thead>
        <tr>
            <th>Subject Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var s in Model)
            {
                <tr>
                    <td>@s.SubjectName</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td style="text-align:center">
                    No subjects found
                </td>
            </tr>
        }
    </tbody>
</table>
