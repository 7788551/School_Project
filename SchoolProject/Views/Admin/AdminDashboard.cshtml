@{
    ViewData["Title"] = "Dashboard"; Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!-- Main Content --> <main class="main-content">
    <!-- Page Header -->

    <div class="page-header bg-light p-4 mb-4 rounded">

        <div class="row align-items-center">

            <div class="col-md-6">
                <h1 class="mb-2">Admin Dashboard</h1> <nav aria-label="breadcrumb">
                    @* <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active">Admin Dashboard</li>
                    </ol> *@
                </nav>
            </div>

            <div class="col-md-6 text-end">
                <a asp-controller="Admin" asp-action="AddStudent" class="btn btn-primary me-2">
                    <i class="bi bi-plus-circle me-1"></i> Add New Student
                </a>

              
            </div>

        </div>
    </div>
    <!-- Welcome Alert -->

   
    <!-- Stats Cards -->

    <div class="row mb-4">

        <div class="col-xl-3 col-md-6 mb-4">

            <div class="card border-0 shadow-sm h-100">

                <div class="card-body">

                    <div class="d-flex align-items-center">

                        <div class="bg-danger bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-people fs-4 text-danger"></i>
                        </div>

                        <div class="flex-grow-1">
                            <h3 class="mb-0">3,654</h3>

                            <p class="text-muted mb-0">Total Students</p>
                        </div>

                        <span class="badge bg-danger">
                            +1.2%
                        </span>
                    </div>

                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted"> Active: <strong>3,643</strong> | Inactive: <strong>11</strong> </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">

            <div class="card border-0 shadow-sm h-100">

                <div class="card-body">

                    <div class="d-flex align-items-center">

                        <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-person-check fs-4 text-primary"></i>
                        </div>

                        <div class="flex-grow-1">
                            <h3 class="mb-0">284</h3>

                            <p class="text-muted mb-0">Total Teachers</p>
                        </div>

                        <span class="badge bg-primary">
                            +1.2%
                        </span>
                    </div>

                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted"> Active: <strong>254</strong> | Inactive: <strong>30</strong> </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">

            <div class="card border-0 shadow-sm h-100">

                <div class="card-body">

                    <div class="d-flex align-items-center">

                        <div class="bg-warning bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-person-badge fs-4 text-warning"></i>
                        </div>

                        <div class="flex-grow-1">
                            <h3 class="mb-0">163</h3>

                            <p class="text-muted mb-0">Total Staff</p>
                        </div>

                        <span class="badge bg-warning">
                            +1.2%
                        </span>
                    </div>

                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted"> Active: <strong>161</strong> | Inactive: <strong>2</strong> </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">

            <div class="card border-0 shadow-sm h-100">

                <div class="card-body">

                    <div class="d-flex align-items-center">

                        <div class="bg-success bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-book fs-4 text-success"></i>
                        </div>

                        <div class="flex-grow-1">
                            <h3 class="mb-0">82</h3>

                            <p class="text-muted mb-0">Total Subjects</p>
                        </div>

                        <span class="badge bg-success">
                            +1.2%
                        </span>
                    </div>

                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted"> Active: <strong>81</strong> | Inactive: <strong>1</strong> </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Dashboard Content -->

    <div class="row">
        <!-- Left Column -->

        <div class="col-lg-8">
            <!-- Fees Collection Chart -->

            <div class="card shadow-sm mb-4">

                <div class="card-header bg-white">
                    <h5 class="mb-0">Fees Collection</h5>
                </div>

                <div class="card-body">

                    <div class="chart-container">
                        <canvas id="feesChart" height="250"></canvas>
                    </div>
                </div>
            </div>
            <!-- Quick Links -->

            <div class="card shadow-sm mb-4">

                <div class="card-header bg-white">
                    <h5 class="mb-0">Quick Links</h5>
                </div>

                <div class="card-body">

                    <div class="row g-3">

                        <div class="col-3 text-center">
                            <a href="#" class="text-decoration-none">

                                <div class="p-3 bg-primary bg-opacity-10 rounded-circle mb-2 d-inline-block">
                                    <i class="bi bi-calendar fs-4 text-primary"></i>
                                </div>

                                <div>
                                    Calendar
                                </div>
                            </a>
                        </div>

                        <div class="col-3 text-center">
                            <a href="#" class="text-decoration-none">

                                <div class="p-3 bg-success bg-opacity-10 rounded-circle mb-2 d-inline-block">
                                    <i class="bi bi-cash-coin fs-4 text-success"></i>
                                </div>

                                <div>
                                    Fees
                                </div>
                            </a>
                        </div>

                        <div class="col-3 text-center">
                            <a href="#" class="text-decoration-none">

                                <div class="p-3 bg-warning bg-opacity-10 rounded-circle mb-2 d-inline-block">
                                    <i class="bi bi-clipboard-check fs-4 text-warning"></i>
                                </div>

                                <div>
                                    Attendance
                                </div>
                            </a>
                        </div>

                        <div class="col-3 text-center">
                            <a href="#" class="text-decoration-none">

                                <div class="p-3 bg-info bg-opacity-10 rounded-circle mb-2 d-inline-block">
                                    <i class="bi bi-file-text fs-4 text-info"></i>
                                </div>

                                <div>
                                    Reports
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Right Column -->

        <div class="col-lg-4">
            <!-- Attendance -->

            <div class="card shadow-sm mb-4">

                <div class="card-header bg-white">
                    <h5 class="mb-0">Today's Attendance</h5>
                </div>

                <div class="card-body">
                    <ul class="nav nav-tabs" id="attendanceTab" role="tablist">
                        <li class="nav-item" role="presentation"> <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#students-tab">Students</button> </li>
                        <li class="nav-item" role="presentation"> <button class="nav-link" data-bs-toggle="tab" data-bs-target="#teachers-tab">Teachers</button> </li>
                        <li class="nav-item" role="presentation"> <button class="nav-link" data-bs-toggle="tab" data-bs-target="#staff-tab">Staff</button> </li>
                    </ul>

                    <div class="tab-content mt-3">

                        <div class="tab-pane fade show active" id="students-tab">

                            <div class="row text-center">

                                <div class="col-4">

                                    <div class="p-3 bg-light rounded">
                                        <h4 class="text-primary">28</h4> <small>Present</small>
                                    </div>
                                </div>

                                <div class="col-4">

                                    <div class="p-3 bg-light rounded">
                                        <h4 class="text-warning">1</h4> <small>Late</small>
                                    </div>
                                </div>

                                <div class="col-4">

                                    <div class="p-3 bg-light rounded">
                                        <h4 class="text-danger">1</h4> <small>Absent</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Other tabs would have similar content -->
                    </div>
                </div>
            </div>
            <!-- Todo List -->

            <div class="card shadow-sm">

                <div class="card-header bg-white">
                    <h5 class="mb-0">Todo List</h5>
                </div>

                <div class="card-body">

                    <div class="list-group list-group-flush">

                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="todo1" checked>
                                <label class="form-check-label" for="todo1">
                                    Send reminder to students
                                </label>
                            </div>

                            <span class="badge bg-success">
                                Completed
                            </span>
                        </div>

                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="todo2">
                                <label class="form-check-label" for="todo2">
                                    Create routine for new staff
                                </label>
                            </div>

                            <span class="badge bg-info">
                                In Progress
                            </span>
                        </div>

                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="todo3">
                                <label class="form-check-label" for="todo3">
                                    Extra class info to students
                                </label>
                            </div>

                            <span class="badge bg-warning">
                                Pending
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>