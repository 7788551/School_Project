@model List<SchoolProject.Models.Enquiry>

@{
    ViewData["Title"] = "Enquiries";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid mt-4">

    <!-- Header + Delete Button -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">📩 Enquiries</h3>

        <form asp-action="DeleteAllEnquiries"
              asp-controller="Admin"
              method="post"
              onsubmit="return confirm('⚠️ Are you sure you want to delete ALL enquiries? This action cannot be undone!');">

            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete All Enquiries
            </button>
        </form>
    </div>

    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <!-- No Data -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No enquiries found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Message</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th style="width:120px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <tr class="@(item.IsRead ? "" : "table-warning")">
                            <td>@(i + 1)</td>

                            <td>@item.FirstName @item.LastName</td>

                            <td>@item.PhoneNumber</td>

                            <td>@item.Email</td>

                            <td style="max-width:300px; white-space:normal;">
                                @item.Message
                            </td>

                            <td>
                                <div>@item.CreatedDate.ToString("dd MMM yyyy")</div>
                                <small class="text-muted">
                                    @item.CreatedDate.ToString("hh:mm tt")
                                </small>
                            </td>

                            <td>
                                @if (item.IsRead)
                                {
                                    <span class="badge bg-success">Read</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Unread</span>
                                }
                            </td>

                            <td>
                                <a asp-controller="Admin"
                                   asp-action="MarkAsRead"
                                   asp-route-id="@item.EnquiryId"
                                   class="btn btn-sm btn-primary">
                                    Read
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
