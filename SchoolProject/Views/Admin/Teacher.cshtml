@model List<Teacher>

@{
    ViewData["Title"] = "Teacher";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@* @if (TempData["Success1"] != null)
{
    <p style="color:green">@TempData["Success1"]</p>
} *@

<div class="container mb-4">
    <div class="row align-items-center border-bottom pb-3">

        <div class="col-lg-6">
            <h3 class="fw-bold mb-0">
                <i class="bi bi-person-badge text-primary me-2"></i> Teacher List
            </h3>
            <small class="text-muted">All registered teachers</small>
        </div>

        <div class="col-lg-6 d-flex justify-content-end">
            <a asp-controller="Admin"
               asp-action="AddTeacher"
               class="btn btn-primary px-4">
                <i class="bi bi-plus-circle me-1"></i> Add New Teacher
            </a>
        </div>

    </div>
</div>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Teachers</h5>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width:5%">#</th>
                            <th style="width:10%">Photo</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th style="width:20%">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int count = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>

                                    <!-- ===============================
                                         TEACHER IMAGE
                                    =============================== -->
                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(item.TeacherImage))
                                        {
                                            <img src="~/images/Teacherprofileimage/@item.TeacherImage"
                                                 alt="Teacher"
                                                 style="width:45px;height:45px;
                                border-radius:50%;
                                object-fit:cover;" />
                                        }
                                        else
                                        {
                                            <img src="~/images/default-user.png"
                                                 alt="No Image"
                                                 style="width:45px;height:45px;
                                border-radius:50%;
                                object-fit:cover;" />
                                        }
                                    </td>


                                    <td>@item.Name</td>
                                    <td>@(item.Email ?? "-")</td>
                                    <td>@item.PhoneNumber</td>

                                    <td>
                                        <a asp-controller="Admin"
                                           asp-action="EditTeacher"
                                           asp-route-id="@item.UserId"
                                           class="btn btn-sm btn-warning me-1">
                                            Edit
                                        </a>

                                        <form asp-controller="Admin"
                                              asp-action="DeleteTeacher"
                                              asp-route-id="@item.UserId"
                                              method="post"
                                              style="display:inline;"
                                              onsubmit="return confirm('Are you sure you want to delete this teacher?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-sm btn-danger">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">
                                    No teachers found
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
