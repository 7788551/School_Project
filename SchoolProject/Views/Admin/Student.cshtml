@model List<Student>

@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]

        <button type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close">
        </button>
    </div>
}


<div class="container mb-4">
    <div class="row align-items-center border-bottom pb-3">

        <!-- Title -->
        <div class="col-lg-6">
            <h3 class="fw-bold mb-0">
                <i class="bi bi-mortarboard-fill text-primary me-2"></i> Student List
            </h3>
            <small class="text-muted">All registered students</small>
        </div>

        <!-- Action Button -->
        <div class="col-lg-6 d-flex justify-content-end">
            <a asp-controller="Admin" asp-action="AddStudent" class="btn btn-primary px-4">
                <i class="bi bi-plus-circle me-1"></i> Add New Student
            </a>
        </div>

    </div>
</div>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Students</h5>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table id="myTable" class="table table-bordered table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Admission No</th>
                            <th>Roll No</th>
                            <th>Class</th>
                            <th>Section</th>
                            <th>Phone</th>
                            <th style="width:15%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int count = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>

                                    <!-- ✅ STUDENT IMAGE -->
                                    <td class="text-center">
                                        <img src="@(string.IsNullOrEmpty(item.StudentImage)
                                                                                                                                      ? Url.Content("~/images/default-user.png")
                                                                                                                                      : Url.Content("~/images/StudentImage/" + item.StudentImage) + "?v=" + DateTime.Now.Ticks)"
                                     alt="Student"
                                     width="45"
                                     height="45"
                                     style="border-radius:50%; object-fit:cover;" />
                            </td>

                                    <td>@item.Name</td>
                                    <td>@item.AdmissionNumber</td>
                                    <td>@(item.RollNumber ?? "-")</td>
                                    <td>@item.ClassName</td>
                                    <td>@item.SectionName</td>
                                    <td>@item.PhoneNumber</td>

                                    <td>
                                        <!-- EDIT -->
                                        <a asp-controller="Admin"
                                           asp-action="EditStudent"
                                           asp-route-id="@item.UserId"
                                           class="btn btn-sm btn-warning me-1">
                                            Edit
                                        </a>

                                        <!-- DELETE -->
                                        <form asp-controller="Admin"
                                              asp-action="DeleteStudent"
                                              asp-route-id="@item.UserId"
                                              method="post"
                                              style="display:inline;"
                                              onsubmit="return confirm('Are you sure you want to delete this student?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted">
                                    No students found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        new DataTable('#myTable');
    });
</script>


