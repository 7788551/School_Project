    <!-- Custom CSS -->
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --success-color: #4cc9f0;
            --warning-color: #f72585;
            --light-bg: #f8f9fa;
            --dark-bg: #212529;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fb;
            padding-top: 60px;
        }

        .navbar-brand {
            font-weight: 600;
            color: var(--primary-color) !important;
        }

        .sidebar {
            position: fixed;
            top: 60px;
            left: 0;
            bottom: 0;
            width: 260px;
            background: white;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
            overflow-y: auto;
            z-index: 100;
            transition: all 0.3s;
        }

            .sidebar.collapsed {
                margin-left: -260px;
            }

        .sidebar-menu {
            list-style: none;
            padding: 0;
        }

            .sidebar-menu li {
                margin-bottom: 5px;
            }

            .sidebar-menu a {
                display: block;
                padding: 12px 20px;
                color: #333;
                text-decoration: none;
                border-left: 4px solid transparent;
                transition: all 0.3s;
            }

                .sidebar-menu a:hover {
                    background-color: rgba(67, 97, 238, 0.1);
                    border-left-color: var(--primary-color);
                }

                .sidebar-menu a.active {
                    background-color: rgba(67, 97, 238, 0.1);
                    border-left-color: var(--primary-color);
                    color: var(--primary-color);
                }

            .sidebar-menu i {
                width: 20px;
                margin-right: 10px;
            }

        .main-content {
            margin-left: 260px;
            padding: 20px;
            transition: all 0.3s;
        }

            .main-content.expanded {
                margin-left: 0;
            }

        .card {
            border: none;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
            border-radius: 10px;
            margin-bottom: 20px;
            transition: transform 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-header {
            background: white;
            border-bottom: 1px solid #eee;
            font-weight: 600;
        }

        .greeting-card {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
        }

        .profile-card {
            background: linear-gradient(135deg, #2b2d42, #4a4e69);
            color: white;
        }

        .progress {
            height: 8px;
            border-radius: 4px;
        }

        .avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
        }

        .avatar-lg {
            width: 80px;
            height: 80px;
        }

        .badge-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            width: 18px;
            height: 18px;
            background-color: red;
            color: white;
            border-radius: 50%;
            font-size: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .stat-card {
            text-align: center;
            padding: 20px;
        }

            .stat-card .number {
                font-size: 2rem;
                font-weight: 700;
            }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #666;
        }

        .event-item {
            border-left: 4px solid;
            padding-left: 15px;
            margin-bottom: 15px;
        }

            .event-item.danger {
                border-left-color: var(--warning-color);
            }

            .event-item.success {
                border-left-color: #4ade80;
            }

            .event-item.info {
                border-left-color: var(--success-color);
            }

            .event-item.warning {
                border-left-color: #f59e0b;
            }

        @@media (max-width: 992px) {
            .sidebar {
                margin-left: -260px;
            }

                .sidebar.show {
                    margin-left: 0;
                }

            .main-content {
                margin-left: 0;
            }
        }

        .attendance-chart {
            height: 150px;
            display: flex;
            align-items: flex-end;
            justify-content: space-around;
            padding: 20px 0;
        }

        .attendance-bar {
            width: 30px;
            background-color: var(--primary-color);
            border-radius: 4px 4px 0 0;
            position: relative;
        }

            .attendance-bar span {
                position: absolute;
                bottom: -25px;
                left: 50%;
                transform: translateX(-50%);
                font-size: 12px;
            }

        .carousel-control-next, .carousel-control-prev {
            width: 40px;
            height: 40px;
            background-color: var(--primary-color);
            border-radius: 50%;
            top: 50%;
            transform: translateY(-50%);
            opacity: 1;
        }

        .carousel-control-prev {
            left: -20px;
        }

        .carousel-control-next {
            right: -20px;
        }

        .modal-content {
            border-radius: 10px;
            border: none;
        }
    </style>
</head>
