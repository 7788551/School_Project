    <style>
        /* ===============================
                   GLOBAL FIX (MOST IMPORTANT)
                ================================ */
        html, body {
            width: 100%;
            overflow-x: hidden; /* 🔥 KILLS BOTTOM SCROLLBAR */
        }

        /* ===============================
                   SIDEBAR
                ================================ */
        #sidebar {
            width: 260px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            background: #fff;
            z-index: 1050;
            transition: transform 0.3s ease;
        }

        /* ===============================
                   MAIN CONTENT
                ================================ */
        #mainContent {
            margin-left: 260px;
            width: calc(100% - 260px); /* 🔥 PREVENT OVERFLOW */
            transition: margin-left 0.3s ease, width 0.3s ease;
        }

        /* ===============================
                   MOBILE / TABLET
                ================================ */
        @@media (max-width: 991px) {
            #sidebar {
                transform: translateX(-100%);
                box-shadow: 4px 0 10px rgba(0,0,0,0.1);
            }

                #sidebar.show {
                    transform: translateX(0);
                }

            #mainContent {
                margin-left: 0;
                width: 100%;
            }

            body.sidebar-open {
                overflow: hidden;
            }
        }

        /* ===============================
                   NAVBAR
                ================================ */
        .navbar {
            z-index: 1100;
        }

        /* ===============================
                   PAGE BODY
                ================================ */
        main {
            max-width: 100%;
            overflow-x: hidden;
        }

        /* ===============================
                   TABLE FIX
                ================================ */
        .table-responsive {
            overflow-x: auto;
            max-width: 100%;
        }

        table {
            width: 100%;
            max-width: 100%;
        }

        /* Sidebar links */
        .nav-link {
            padding: 10px 14px;
            border-radius: 6px;
        }
    </style>
</head>

