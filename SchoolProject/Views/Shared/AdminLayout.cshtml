    <style>
        /* .rotate-icon {
            transition: transform 0.3s ease;
        }

        /* When menu is closed */
        /* a.collapsed .rotate-icon {
            transform: rotate(0deg);
        } */


        /* ===============================
           Sidebar Base
        ================================ */
        #sidebar {
            width: 260px;
            height: 100vh;
            overflow-y: auto;
            transition: transform 0.3s ease;
            z-index: 1050;
        }

        /* ===============================
           Main Content
        ================================ */
        #mainContent {
            margin-left: 260px;
            transition: margin-left 0.3s ease;
        }

        /* ===============================
           Mobile & Tablet
        ================================ */
        @@media (max-width: 991px) {
            #sidebar

        {
            transform: translateX(-100%);
            position: fixed;
            top: 0;
            left: 0;
            background: #fff;
            box-shadow: 4px 0 10px rgba(0,0,0,0.1);
        }

        #sidebar.show {
            transform: translateX(0);
        }

        #mainContent {
            margin-left: 0;
        }

        body.sidebar-open {
            overflow: hidden;
        }

        }

        /* ===============================
           Sidebar Links Touch Friendly
        ================================ */
        .nav-link {
            padding: 10px 14px;
            border-radius: 6px;
        }

        /* Prevent sidebar hiding behind navbar */
        .navbar {
            z-index: 1100;
        }


    </style>
</head>

