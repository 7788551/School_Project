    @RenderSection("Scripts", required: false)
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            fetch('/Admin/GetCurrentSession')
                .then(response => response.json())
                .then(data => {
                    if (data && data.sessionName) {
                        document.getElementById("academicYear").innerHTML =
                            `<i class="bi bi-calendar-event"></i> Academic Year: ${data.sessionName}`;
                    } else {
                        document.getElementById("academicYear").innerHTML =
                            `<i class="bi bi-calendar-event"></i> Academic Year: Not Set`;
                    }
                })
                .catch(error => {
                    console.error("Error fetching academic year:", error);
                    document.getElementById("academicYear").innerHTML =
                        `<i class="bi bi-calendar-event"></i> Academic Year: Error`;
                });

        });


        document.getElementById("sidebarToggle")?.addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("show");
            document.body.classList.toggle("sidebar-open");
        });

        // Close sidebar when clicking outside (mobile)
        document.addEventListener("click", function (e) {
            const sidebar = document.getElementById("sidebar");
            const toggle = document.getElementById("sidebarToggle");

            if (
                sidebar.classList.contains("show") &&
                !sidebar.contains(e.target) &&
                !toggle.contains(e.target)
            ) {
                sidebar.classList.remove("show");
                document.body.classList.remove("sidebar-open");
            }
        });
          document.querySelectorAll("#sidebar a").forEach(link => {
            link.addEventListener("click", () => {
                if (window.innerWidth <= 991) {
                    document.getElementById("sidebar").classList.remove("show");
                    document.body.classList.remove("sidebar-open");
                }
            });
        });


            document.getElementById("createNextSessionBtn")
        ?.addEventListener("click", function () {

            if (!confirm("Are you sure you want to create the next academic session?")) {
                return;
            }

            const btn = this;
            btn.disabled = true;
            btn.innerHTML = "Creating...";

            fetch('/Admin/CreateNextSession', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken':
                        document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert("Next academic session created successfully.");
                    location.reload();
                } else {
                    alert(data.message || "Failed to create session.");
                    btn.disabled = false;
                    btn.innerHTML = "Create Next Session";
                }
            })
            .catch(() => {
                alert("Server error.");
                btn.disabled = false;
                btn.innerHTML = "Create Next Session";
            });
        });

    </script>

