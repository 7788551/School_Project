@model List<SchoolProject.Models.Mentor>

@{
    ViewData["Title"] = "Mentors";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Mentors</h4>

    @if (Model.Count < 2)
    {
        <a asp-action="AddMentor"
           asp-controller="Mentor"
           class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Mentor
        </a>
    }
    else
    {
        <span class="text-danger fw-bold">
            Maximum 2 mentors allowed
        </span>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"></button>
    </div>
}


<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th style="width:80px;">Photo</th>
            <th>Name</th>
            <th>Designation</th>
            <th style="width:120px;">Order</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="5" class="text-center text-muted">
                    No mentors found.
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="~/uploads/mentors/@item.ImagePath"
                                 class="rounded"
                                 style="height:60px;width:60px;object-fit:cover;" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>

                    <td>@item.Name</td>
                    <td>@item.Designation</td>
                    <td>@item.DisplayOrder</td>

                    <td>
                        <a asp-action="EditMentor"
                           asp-controller="Mentor"
                           asp-route-id="@item.MentorId"
                           class="btn btn-sm btn-warning me-1">
                            Edit
                        </a>

                        <form asp-action="Delete"
                              asp-controller="Mentor"
                              asp-route-id="@item.MentorId"
                              method="post"
                              class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this mentor?');">
                            <button type="submit"
                                    class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
